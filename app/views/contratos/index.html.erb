<p id="notice"><%= notice %></p>
<div class="col-md-12">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h1 class="panel-title">Lista de Contratos </h1>
    </div>
    <div class="panel-body">
      <table id="tabla" class="table table-striped table-hover" width="100%">
        <thead>
        <tr>
          <th>Inquilino</th>
          <th>Departamento</th>
          <th>Precio</th>
          <th>Fecha contrato</th>
          <th>Inicio contrato</th>
          <th>Fin contrato</th>
          <th>Contrato escaneado</th>
          <!--<th>Contrato 2</th> -->
          <th>Ver</th>
          <th>Editar</th>
          <th>Eliminar</th>

        </tr>
        </thead>

        <tbody>
        <% @contratos.each do |contrato| %>
            <tr>
              <td><%= contrato.inquilino.nombre %> <%= contrato.inquilino.apellido %></td>
              <td><%= contrato.departamento.nombre_departamento %></td>
              <td><%= number_with_precision(contrato.departamento.precio, precision: 0, separator: ',', delimiter: '.') %></td>
              <td><%= contrato.fecha_contrato.strftime("%d/%m/%Y") %></td>
              <td><%= contrato.inicio_contrato.strftime("%d/%m/%Y") %></td>
              <td><%= contrato.fin_contrato.strftime("%d/%m/%Y") %></td>
              <td>
                <a target="_blank" href="<%= contrato.imagen_url %>" download="<%= contrato.imagen_url %>">Descargar </a>
              </td>
              <!--
              <td>
                <a target="_blank" href="<%= contrato.imagendos_url %>" download="<%= contrato.imagendos_url %>">Descargar</a>
              </td>
              -->
              <td><%= link_to 'VER', contrato, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'EDITAR', edit_contrato_path(contrato), class: "btn btn-warning btn-xs" %></td>
              <td><%= link_to 'ELIMINAR', contrato, method: :delete, data: {confirm: 'ESTAS SEGURO DE ELIMINAR ESTE CONTRATO?'}, class: "btn btn-danger btn-xs" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nuevo Contrato', new_contrato_path, class: 'btn btn-success btn-sm pull-left' %>
